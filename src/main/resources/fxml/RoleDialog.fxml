<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<AnchorPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            prefWidth="450.0" prefHeight="400.0"
            fx:controller="se.lu.ics.controllers.RoleDialogController">
    <children>
        <Label text="Role ID:" layoutX="20" layoutY="20"/>
        <TextField fx:id="textFieldId" layoutX="150" layoutY="20" prefWidth="280"/>
       
        <Label text="Title:" layoutX="20" layoutY="60"/>
        <TextField fx:id="textFieldTitle" layoutX="150" layoutY="60" prefWidth="280"/>
       
        <Label text="Department:" layoutX="20" layoutY="100"/>
        <TextField fx:id="textFieldDepartment" layoutX="150" layoutY="100" prefWidth="280"/>
       
        <Label text="Description:" layoutX="20" layoutY="140"/>
        <TextArea fx:id="textAreaDescription" layoutX="150" layoutY="140" prefWidth="280" prefHeight="120" wrapText="true"/>
       
        <Button text="Save" layoutX="150" layoutY="290" onAction="#handleSave"/>
        <Button text="Cancel" layoutX="220" layoutY="290" onAction="#handleCancel"/>
       
        <Label fx:id="labelResponse" layoutX="20" layoutY="340" prefWidth="410" visible="false"/>
    </children>
</AnchorPane>