<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<AnchorPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            prefWidth="900.0" prefHeight="600.0"
            fx:controller="se.lu.ics.controllers.ApplicationsForRecruitmentViewController">
    <children>
        <Label fx:id="labelRecruitmentInfo" layoutX="20" layoutY="20" prefWidth="860"
               style="-fx-font-size: 16; -fx-font-weight: bold;"/>
        <Label fx:id="labelApplicantCount" layoutX="20" layoutY="50" prefWidth="860"/>
       
        <TableView fx:id="tableViewApplications"
                   layoutX="20" layoutY="90"
                   prefWidth="860" prefHeight="420">
            <columns>
                <TableColumn fx:id="colApplicationId" text="ID" prefWidth="120"/>
                <TableColumn fx:id="colCandidateName" text="Candidate" prefWidth="250"/>
                <TableColumn fx:id="colApplicationDate" text="Application Date" prefWidth="180"/>
                <TableColumn fx:id="colRanking" text="Ranking" prefWidth="100"/>
                <TableColumn fx:id="colOfferAccepted" text="Offer Accepted" prefWidth="150"/>
            </columns>
        </TableView>
       
        <Button text="Edit Application" layoutX="20" layoutY="530" onAction="#handleEditApplication"/>
        <Button text="Close" layoutX="800" layoutY="530" onAction="#handleClose"/>
    </children>
</AnchorPane>
