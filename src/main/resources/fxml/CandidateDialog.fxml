<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<AnchorPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            prefWidth="400.0" prefHeight="300.0"
            fx:controller="se.lu.ics.controllers.CandidateDialogController">
    <children>
        <Label text="Candidate ID:" layoutX="20" layoutY="20"/>
        <TextField fx:id="textFieldId" layoutX="150" layoutY="20" prefWidth="220" editable="false"/>
       
        <Label text="Name:" layoutX="20" layoutY="60"/>
        <TextField fx:id="textFieldName" layoutX="150" layoutY="60" prefWidth="220"/>
       
        <Label text="Email:" layoutX="20" layoutY="100"/>
        <TextField fx:id="textFieldEmail" layoutX="150" layoutY="100" prefWidth="220"/>
       
        <Label text="Phone:" layoutX="20" layoutY="140"/>
        <TextField fx:id="textFieldPhone" layoutX="150" layoutY="140" prefWidth="220"/>
       
        <Button text="Save" layoutX="150" layoutY="200" onAction="#handleSave"/>
        <Button text="Cancel" layoutX="220" layoutY="200" onAction="#handleCancel"/>
       
        <Label fx:id="labelResponse" layoutX="20" layoutY="250" prefWidth="360" visible="false"/>
    </children>
</AnchorPane>