<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<AnchorPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            prefWidth="400.0" prefHeight="350.0"
            fx:controller="se.lu.ics.controllers.RecruitmentDialogController">
    <children>
        <Label text="Recruitment ID:" layoutX="20" layoutY="20"/>
        <TextField fx:id="textFieldId" layoutX="150" layoutY="20" prefWidth="220" editable="false"/>
       
        <Label text="Role:" layoutX="20" layoutY="60"/>
        <ComboBox fx:id="comboBoxRole" layoutX="150" layoutY="60" prefWidth="220"/>
       
        <Label text="Posting Date:" layoutX="20" layoutY="100"/>
        <DatePicker fx:id="datePickerPosting" layoutX="150" layoutY="100" prefWidth="220"/>
       
        <Label text="Application Deadline:" layoutX="20" layoutY="140"/>
        <DatePicker fx:id="datePickerDeadline" layoutX="150" layoutY="140" prefWidth="220"/>
       
        <Label text="Status:" layoutX="20" layoutY="180"/>
        <ComboBox fx:id="comboBoxStatus" layoutX="150" layoutY="180" prefWidth="220"/>
       
        <Button text="Save" layoutX="150" layoutY="240" onAction="#handleSave"/>
        <Button text="Cancel" layoutX="220" layoutY="240" onAction="#handleCancel"/>
       
        <Label fx:id="labelResponse" layoutX="20" layoutY="290" prefWidth="360" visible="false"/>
    </children>
</AnchorPane>